<!DOCTYPE html>
<html lang="it">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>DTD - App di valutazione</title>
  <link rel="stylesheet" href="https://unpkg.com/bootstrap-italia@2.9.1/dist/css/bootstrap-italia.min.css" />
  <link rel="stylesheet" href="<%- basePathCss %>style.css" />
</head>

<body>
  <%- include('partials/icons'); %>
  <!-- HEADER -->
  <%- include('partials/header'); %>

  <!-- MAIN SECTION -->
  <main>
    <div id="content" class="container">
      <% if (currentPage === 'home' || currentPage === '') { %>
      <%- include('home') %>
      <% } else if (currentPage === 'scanning') { %>
      <%- include('scanning') %>
      <% } else if (currentPage === 'report') { %>
      <%- include('report') %>
      <% } else if (currentPage === 'history') { %>
      <%- include('history', historyData) %>
      <% } else { %>
      <p>Page not found <%= currentPage %></p>
      <% } %>

    </div>
  </main>

  <!-- FOOTER -->
  <%- include('partials/footer'); %>

  <!-- JS DEPENDENCIES -->
  <script src="https://unpkg.com/bootstrap-italia@2.9.1/dist/js/bootstrap-italia.bundle.min.js"></script>
  <script src="<%- basePathJs %>elements.js" type="module"></script>
  <script src="<%- basePathJs %>routing.js" type="module"></script>
  <script src="<%- basePathJs %>stepper.js" type="module"></script>
  <script src="<%- basePathJs %>settingsForm.js" type="module"></script>
  <script src="<%- basePathJs %>resultsForm.js" type="module"></script>
  <script src="<%- basePathJs %>pagination.js" type="module"></script>
  <script src="<%- basePathJs %>delete-record.js" type="module"></script>
  <script src="<%- basePathJs %>deselect-all.js" type="module"></script>
</body>

</html>