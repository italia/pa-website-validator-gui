<form id="urlForm<%-currentPage === 'scanning' ? 'Pending' : '' %>">
  <div class="select-wrapper">
    <label for="type-select">Tipologia ente</label>
    <select id="type-select" name="type" <%- currentPage === "scanning" ? "disabled" : "required" %>>
      <option value="municipality" <%- locals.scanningWebsiteType === "municipality" || locals.scanningWebsiteType === "Comune" ? "selected" : "" %>>Comune</option>
      <option value="school" <%- locals.scanningWebsiteType === "school" || locals.scanningWebsiteType === "Scuola" ? "selected" : "" %>>Scuola</option>
    </select>
  </div>
  <div class="form-group">
    <div class="input-group">
      <!--
      <span class="input-group-text">
        <svg class="icon icon-sm">
          <use href="#it-search"></use>
        </svg>
      </span>
      -->
      <label for="inputUrl" class="active">Url sito</label>
      <input
        type="search"
        placeholder="Inserisci l'url del sito che si vuole scansionare"
        class="form-control autocomplete"
        id="inputUrl" name="website"
        value="<%- locals.scanningWebsite ?? undefined %>"
        <%- currentPage === "scanning" ? "readonly" : "required" %>
        aria-errormessage="inputUrlError"
      />
      <ul class="autocomplete-list"></ul>
      <div class="input-group-append">
        <% if (currentPage === 'scanning') { %>
          <button id="stop-process" class="btn btn-primary" type="submit">
            Annulla scansione
          </button>
        <% } else { %>
          <span class="disabled-wrapper">
            <button id="startBtn" class="btn btn-primary" type="submit" disabled>
              Avvia scansione
            </button>
          </span>
        <% } %>
      </div>
      <small id="inputUrlError" class="error-message">URL non valido. Rispettare il formato: https://www.xyz.it</small>
    </div>
  </div>
</form>