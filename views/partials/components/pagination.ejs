<nav class="pagination-wrapper justify-content-center" aria-label="Paginazione">
  <ul id="pagination" class="pagination" aria-label="Pagina <%- pagination.currentPage %> di <%- pagination.numberOfPages %>">
    <li class="page-item">
      <a class="page-link" href="#">
        <svg class="icon icon-primary"><use href="#it-chevron-left"></use></svg>
        <span class="visually-hidden">Pagina precedente</span>
      </a>
    </li>
    <li class="page-item"><span class="page-link" aria-current="page" data-current-page="<%- pagination.currentPage %>"><%- pagination.currentPage %></span></li>
    <li class="page-item" aria-hidden="true"><span class="page-link">/</span></li>
    <li class="page-item" aria-hidden="true"><span class="page-link"><%- pagination.numberOfPages %></span></li>
    <li class="page-item">
      <a class="page-link" href="#">
        <svg class="icon icon-primary"><use href="#it-chevron-right"></use></svg>
        <span class="visually-hidden">Pagina successiva</span>
      </a>
    </li>
  </ul>
</nav>