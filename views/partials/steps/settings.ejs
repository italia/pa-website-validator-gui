<div id="full-settings-container">
  <!-- ALERT SECTION -->
  <div class="alert alert-primary" role="alert" id="alert-container">
    <p class="h5">Informazioni generali</p>
    <p>
      Inserire il link che si desidera scansionare e attendere il
      risultato
    </p>
    <div class="separator"></div>
    <p>
      Una volta ultimata la scansione verr√† messo a disposizione il link
      a Report per poter essere consultato
    </p>
    <p>
      <a href="#" target="_blank">Documentazione delle App di valutazione</a>
    </p>
  </div>

  <!-- SETTINGS -->
  <div id="settings-container">
    <h2>Settings</h2>
    <form id="settingsForm" class="setting-wrapper">
      <%- include('../components/radio', {label: "Type", name: "type" ,options: ["Municipality", "School"], checked: "Municipality"});  %>
      <%- include('../components/radio', {label: "Scope", name: "scope" ,options: ["online", "local"], checked: "online"});  %>
      <%- include('../components/radio', {label: "Accuracy", name: "accuracy" ,options: ["all", "suggested", "min"], checked: "suggested"});  %>
      <%- include('../components/input-numeric', {label: "Concurrent pages", defaultValue:10, name: "concurrentPages", step: 1});  %>
      <%- include('../components/input-numeric', {label: "Timeout (ms)", defaultValue: 30000,name: "timeout", step: 1000});  %>

      <button class="btn btn-primary" type="submit" onclick="getAuditsFromSettings(event)">Confirm (?)</button>
    </form>
  </div>

  <!-- AUDITS -->
  <div id="audits-container">
    <h2>Audits</h2>

    <form id="auditsForm" class="audits-wrapper">
    </form>
  </div>
</div>