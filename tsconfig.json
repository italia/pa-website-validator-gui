{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "src/**/*",
    "**/*.ts"
,  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
