{
  "name": "pa-website-validator-ng-gui",
  "version": "1.0.14",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "start": "export NODE_ENV=development && npm run prepare && electron dist/main.js",
    "start:local": "export NODE_ENV=development && node dist/server.js",
    "build": "rm -rf dist && npm install && npx electron-builder --publish never",
    "prepare": "npm run build:css && rm -rf dist && tsc && npm run copy-files && mv dist/preload.js dist/preload.mjs",
    "copy-files": "copyfiles -u 1 \"src/**/*.{ejs,html,json,scss,css,map,js,ttf,woff,woff2}\" dist/",
    "build:css": "sass css/style.scss:src/public/css/style.css"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@types/express": "^5.0.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "pa-website-validator-ng": "github:italia/pa-website-validator-ng#v1.0.7",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/yargs": "^17.0.33",
    "electron": "^32.2.0",
    "electron-builder": "^25.1.7",
    "sass": "^1.80.4"
  }
}
